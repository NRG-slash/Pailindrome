<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comnrg_slash.httpsgithub.pailindrome.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_error_message"
        android:padding="18dp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="281dp" />

    <EditText
        android:id="@+id/et_word_input"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Enter your word, please"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="234dp" />

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_word_input"
        android:padding="18sp"
        android:textColor="#fa00"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="348dp" />

</android.support.constraint.ConstraintLayout>
